{% extends 'base.html.j2' %}
{% block content %}
	<h1>Jobs</h1>
	<div class="row">
		<div class="col-sm-12 col-md-12 col-lg-12 mx-auto">
			<table class="table table-striped table-bordered" style="width:100%">
				<thead>
					<tr>
						<th>Job ID</th>
						<th>Start Time</th>
						<th>Function</th>
						<th>State</th>
				</thead>
				<tbody>
					{% for job, val in my_jobs.items() %}
						<tr>
							<td><a href="/jobs/{{ minion_id}}/{{ job }}">{{ job }}</a></td>
							<td>{{ val.get('StartTime') }}</td>
							<td>{{ val.get('Function') }}</td>
							<td>{{ 'Success' if val.get('State') else 'Failed' }}</td>
						</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
