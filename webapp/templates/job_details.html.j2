{% extends 'base.html.j2' %}
{% block content %}
	<h1>Job {{ job_id }}</h1>
	<div class="row">
		<div class="col-sm-12 col-md-12 col-lg-12 mx-auto">
			<table class="table table-striped table-bordered" style="width:100%">
				<thead>
					<tr>
						<th>Type</th>
						<th>Option</th>
						<th>Target</th>
						<th>Source</th>
						<th>Result</th>
						<th>Change</th>
				</thead>
				<tbody>
					{% for resource, val in my_job.items() %}
						<tr>
							<td>{{ val.get('type')}}</td>
							<td>{{ val.get('option')}}</td>
							<td>{{ val.get('target')}}</td>
							<td>{{ val.get('apply')}}</td>
							<td>{{ val.get('result') }}</td>
							<td><pre>{{ val.get('changes') }}</pre></td>
						</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
